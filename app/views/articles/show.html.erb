<% @body_class = "#{@article.category.name.parameterize}-detalhes #{@article.category.name.parameterize}-detalhes_index area-#{@article.category.name.parameterize} pagina-detalhes" %>
<header class="titulo-area">
  <h1><%= link_to @article.category.name, @article.category %></h1>
</header>

<div id="content-inner">
  <div id="main">
    <section class="artigo">
      <article>
        <header>
          <h1><%= @article.title %></h1>
          <h2><%= @article.summary %></h2>
        </header>

        <div class="entry-content">
          <%= image_tag @article.image.large, width: 620, height: 340 %>
          <%= simple_format @article.body %>
        </div>
      </article>
    </section>

    <section id="artigo-comentarios">
      <header>
        <h1>Coment√°rios</h1>
      </header>

      <div class="lista-comentarios">
        <%= render @article.comments %>
      </div>

      <div class="form-comentario">
        <%= simple_form_for @comment do |f| %>
          <%= f.association :article, as: :hidden %>
          <%= f.input :name %>
          <%= f.input :email %>
          <%= f.input :body, input_html: {rows: 6} %>
          <%= f.button :submit, 'Enviar', class: 'small button' %>
        <% end %>
      </div>
    </section>
  <!--end .artigo-->
  </div>

  <div id="sidebar">
    <% if @article.related.any? %>
      <section class="ultimas-noticias">
        <header>
          <h1>Relacionadas</h1>
        </header>
        <%= render partial: 'articles/related_article', collection: @article.related, as: :article %>
      </section>
    <% end %>
  </div>
<!--end #sidebar-->
</div>
