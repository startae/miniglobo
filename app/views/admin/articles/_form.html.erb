<%= simple_form_for([:admin, @article]) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.input :image %>
    <%= f.input :body %>
    <%= f.input :published %>
    <%= f.input :featured %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, 'Salvar', class: 'btn btn-primary' %>
    <%= link_to 'Cancelar', :back, class: 'btn' %>
  </div>
<% end %>
