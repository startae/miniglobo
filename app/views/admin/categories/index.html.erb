<h1>Categorias</h1>

<table class="table">
  <thead>
    <tr>
      <th>Nome</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= category.name %></td>
        <td>
          <div class="btn-group">
            <%= link_to 'Editar', edit_admin_category_path(category), class: 'btn' %>
            <%= link_to 'Excluir', [:admin, category], method: :delete, data: { confirm: 'Tem certeza?' }, class: 'btn' %>
          </div>

        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Criar Categoria', new_admin_category_path, class: 'btn btn-primary' %>
