<%= simple_form_for([:admin, @category]) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, 'Salvar', class: 'btn btn-primary' %>
    <%= link_to 'Cancelar', :back, class: 'btn' %>
  </div>
<% end %>
